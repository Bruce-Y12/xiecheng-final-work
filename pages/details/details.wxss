/* detail.wxss */

swiper {
  height: 67.7%;
}
.swiper-image{
  width: 100%;
  height: 100%;
}

.user-head{
  display: flex;
  align-items: center;
  padding: 20rpx;
  font-weight: bold;
  font-size: 14px;
}

.user-head image{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 6px;
}
.swiper-container {
  height: 100vh; /* 使用 calc() 函数计算高度 */
}
.time_location{
  margin-left: 10px;
  font-weight: 300;
  font-size: 10px;
  color:#808080
}
.notes{
  display: flex;
  flex-direction: column;
}
.user-title{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: bold;
  font-size: 16px;
  line-height: 20px;
  margin: 10px 0 10px 10px;

}
.user-description {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 12px;
  margin-left: 10px;

}